# Environment Configuration Template
# Copy this file to .env and update with your specific values

# Django Configuration
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,finops-dashboard.example.com

# Database Configuration
DATABASE_URL=postgresql://finops_user:finops_password@localhost:5432/finops_dashboard
DATABASE_NAME=finops_dashboard
DATABASE_USER=finops_user
DATABASE_PASSWORD=finops_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_password

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret

# AWS Configuration (for CLI operations)
DEFAULT_AWS_REGION=us-east-1
AWS_DEFAULT_PROFILE=default

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/home/app/logs/django.log

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Monitoring and Metrics
ENABLE_METRICS=True
METRICS_COLLECTION_INTERVAL=300

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=.json,.yaml,.yml,.txt,.log

# Rate Limiting
RATE_LIMIT_LOGIN=5/m
RATE_LIMIT_API=100/h
RATE_LIMIT_GENERAL=1000/h

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour
SESSION_COOKIE_AGE=3600

# MFA Configuration
MFA_REQUIRED=True
MFA_BACKUP_CODES_COUNT=10
MFA_TOKEN_VALIDITY=300  # 5 minutes
